@model ENTIDAD.Employees

@{
    ViewBag.Title = "Detalles Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h4>Detalle Empleado</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Apellido
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
           Nombre
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Titulo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Titulo de Cortesia
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TitleOfCourtesy)
        </dd>

        <dt>
            Fecha de nacimiento
        </dt>

        <dd>
            @Model.BirthDate.Value.ToShortDateString()
        </dd>

        <dt>
            Fecha de ingreso
        </dt>

        <dd>
            @Model.HireDate.Value.ToShortDateString()
        </dd>

        <dt>
            Dirección
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            Ciudad
        </dt>

        <dd>
            @Html.DisplayFor(model => model.City)
        </dd>

        <dt>
            Region
        </dt>

        <dd>
            @PracticaMVC.Controllers.EmpleadosController.NombreRegion(Model.Region)
            </dd>
        </dl>
</div>
<p>
    @Html.ActionLink("Editar", "EditarEmpleado", new { id = Model.EmployeeID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Regresar", "Index", new { }, new { @class = "btn btn-primary" })
</p>